<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="sdm_discipline_tree" model="ir.ui.view">
	<field name="name">sdm.discipline.view.tree</field>
	<field name="model">sdm.discipline</field>
	<field name="arch" type="xml">
		<tree>
			<field name="name"/>
			<field name="aggregation"/>
		</tree>
	</field>
</record>

<record id="sdm_discipline_form" model="ir.ui.view">
	<field name="name">sdm.discipline.view.form</field>
	<field name="model">sdm.discipline</field>
	<field name="arch" type="xml">
		<form>
			<sheet>
				<group>
					<field name="name"/>
					<field name="aggregation"/>
				</group>
			</sheet>
			<div class="oe_chatter">
				<field name="message_follower_ids" widget="mail_followers"/>
				<field name="activity_ids" widget="mail_activity"/>
				<field name="message_ids" widget="mail_thread"/>
			</div>
		</form>
	</field>
</record>

<record id="sdm_discipline_action" model="ir.actions.act_window">
	<field name="name">DisciplÃ­ny</field>
	<field name="type">ir.actions.act_window</field>
	<field name="res_model">sdm.discipline</field>
	<field name="view_mode">tree,form</field>
</record>
</odoo>